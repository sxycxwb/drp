@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    $(function () {
        if (!!keyValue) {
            $.ajax({
                url: "/UserCenter/CardInfo/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#form1").formSerialize(data);
                }
            });
        }
    });
    function submitForm() {
        if (!$('#form1').formValid()) {
            $.modalAlert('请将信息输入完整！', 'warning');
            return false;
        }
        $.submitForm({
            url: "/UserCenter/CardInfo/SubmitForm",
            param: $("#form1").formSerialize(),
            success: function (msg) {
                switch (msg.state) {
                    case "success":
                        $.modalAlert(msg.message, 'success');
                    case "warning":
                        $.modalAlert(msg.message, 'warning');
                    case "error":
                        $.modalAlert(msg.message, 'error');
                    default:
                        $.modalAlert(msg.message, 'warning');
                }
            }
        });
    }
</script>
<form id="form1">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#">银行卡基本信息</a></li>
            @*<li ><a href="#">扩展信息</a></li>*@
        </ul>
        <div style="padding-top: 20px; margin-right: 30px;">
            <table class="form">
                <tr>
                    <th class="formTitle"><span class="required-span">*</span>银行账户名</th>
                    <td class="formValue" style="width:100%">
                        <input id="F_BankAccountName" name="F_BankAccountName" type="text" class="form-control required" placeholder="请输入银行账户名" />
                    </td>

                </tr>
                <tr>
                    <th class="formTitle"><span class="required-span">*</span>银行卡号</th>
                    <td class="formValue" style="width:100%">
                        <input id="F_BankCardNo" name="F_BankCardNo" type="text" class="form-control required" placeholder="请输入银行卡号" />
                    </td>
                </tr>
                <tr style="margin-top:10px;">
                    <th class="formTitle" valign="top" style="padding-top: 5px;">
                        备注
                    </th>
                    <td class="formValue" colspan="3">
                        <textarea id="F_Description" name="F_Description" class="form-control" style="height: 60px;"></textarea>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>
