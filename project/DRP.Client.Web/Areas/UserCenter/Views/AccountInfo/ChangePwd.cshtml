@{
    ViewBag.Title = "ChangePwd";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>

    function submitForm() {
        if (!$('#form1').formValid()) {
            $.modalAlert('请将信息输入完整！', 'warning');
            return false;
        }
        var oldpwd = $("#OldPwd").val();
        var newpwd = $("#NewPwd").val();
        var confirmpwd = $("#ConfirmPwd").val();
        if (newpwd != confirmpwd) {
            $.modalAlert('两次新密码输入不一致！请确认新密码！', 'warning');
            return false;
        }
        //if (oldpwd == newpwd) {
        //    $.modalAlert('新密码不能与原密码相同！', 'warning');
        //    return false;
        //}
        $.submitForm({
            url: "/UserCenter/AccountInfo/SubmitPwd",
            param: { oldpwd: $.md5(oldpwd.trim()), newpwd: $.md5($.trim(newpwd)) },
            success: function (msg) {
                switch (msg.state) {
                    case "success":
                        $.modalAlert(msg.message, 'success');
                    case "warning":
                        $.modalAlert(msg.message, 'warning');
                    case "error":
                        $.modalAlert(msg.message, 'error');
                    default:
                        $.modalAlert(msg.message, 'warning');
                }
            }
        });
    }
</script>
<form id="form1">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#">修改密码</a></li>
        </ul>
        <div style="padding-top: 20px; margin-right: 30px;">
            <table class="form">
                <tr>
                    <th class="formTitle"><span class="required-span">*</span>原密码</th>
                    <td class="formValue">
                        <input id="OldPwd" name="OldPwd" type="password" class="form-control required" placeholder="请输入原密码"  />
                    </td>

                </tr>
                <tr>
                    <th class="formTitle"><span class="required-span">*</span>新密码</th>
                    <td class="formValue">
                        <input id="NewPwd" name="F_BankAccountName" type="password" class="form-control required" placeholder="请输入新密码" />
                    </td>

                </tr>
                <tr>
                    <th class="formTitle"><span class="required-span">*</span>确认密码</th>
                    <td class="formValue">
                        <input id="ConfirmPwd" name="F_BankCardNo" type="password" class="form-control required" placeholder="请输入确认密码" />
                    </td>
                </tr>

            </table>
        </div>
    </div>
</form>
