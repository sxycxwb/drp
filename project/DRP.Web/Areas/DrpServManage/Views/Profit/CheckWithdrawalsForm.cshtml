@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    $(function () {
        initControl();
        if (!!keyValue) {
            $.ajax({
                url: "/DrpServManage/Profit/GetWithdrawalsFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#form1").formSerialize(data);
                    initControl();
                }
            });
        }
        $('#btnTurndown').click(function () {
            var postData = $("#form1").formSerialize();
            postData["F_Status"] = 3;
            $.confirmForm({
                url: "/DrpServManage/Profit/WithdrawSubmitForm?keyValue=" + keyValue,
                param: postData,
                loading: "正在提交中...",
                prompt: "确认驳回此提现申请吗？",
                success: function () {
                    $.currentWindow().$("#gridList").resetSelection();
                    $.currentWindow().$("#gridList").trigger("reloadGrid");
                }
            });
        });
    });
    

    function initControl() {
    }

    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }
        var postData = $("#form1").formSerialize();
        postData["F_Status"] = 2;
        $.confirmForm({
            url: "/DrpServManage/Profit/WithdrawSubmitForm?keyValue=" + keyValue,
            param: postData,
            loading: "正在提交中...",
            prompt: "确认通过此申请提现吗？",
            success: function () {
                $.currentWindow().initBalance();
                $.currentWindow().$("#gridList").resetSelection();
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        });
    }
</script>
<form id="form1">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <ul class="nav nav-tabs">
            <li role="presentation" class="active"><a href="#">提现信息</a></li>
        </ul>
        <div style="padding-top: 20px; margin-right: 30px;">
            <table class="form">
                <tr>
                    <th class="formTitle">提现人：</th>
                    <td class="formValue">
                        <input id="F_WithdrawPersonName" readonly="readonly" name="F_WithdrawPersonName" type="text" class="form-control required" style="display: inline-block; width: 150px;" /> <span style="display: inline-block;margin-left: 4px;font-weight: bold;"> 元</span>
                    </td>
                    <th class="formTitle">提现金额：</th>
                    <td class="formValue">
                        <input id="F_WithdrawAmount" readonly="readonly" name="F_WithdrawAmount" type="number" class="form-control required" style="display: inline-block; width: 150px;"/> <span style="display: inline-block; margin-left: 4px; font-weight: bold;"> 元</span>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle" valign="top" style="padding-top: 5px;">
                        提现备注：
                    </th>
                    <td class="formValue" colspan="3">
                        <textarea id="F_WithdrawRemark" readonly="readonly" name="F_WithdrawRemark" class="form-control" style="height: 60px;"></textarea>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle" valign="top" style="padding-top: 5px;">
                        审核备注：
                    </th>
                    <td class="formValue" colspan="3">
                        <textarea id="F_CheckRemark" name="F_CheckRemark" class="form-control" style="height: 60px;"></textarea>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle" valign="top" style="padding-top: 5px;">
                        驳回原因：
                    </th>
                    <td class="formValue" colspan="3">
                        <textarea id="F_TurndownRemark" name="F_TurndownRemark" class="form-control" style="height: 60px;"></textarea>
                    </td>
                </tr>
                <tr>
                    <th></th>
                    <td><button class="btn btn-danger right-align" id="btnTurndown">驳回</button></td>
                </tr>
            </table>
        </div>
    </div>
</form>
