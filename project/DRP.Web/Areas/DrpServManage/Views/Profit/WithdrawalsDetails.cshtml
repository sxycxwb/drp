@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    $(function () {
        initControl();
        $.ajax({
            url: "/DrpServManage/Profit/GetWithdrawalsFormJson",
            data: { keyValue: keyValue },
            dataType: "json",
            async: false,
            success: function (data) {
                var cellvalue = data.F_Status;
                var statusHtml;
                if (cellvalue == 1) {
                    statusHtml = '<span class=\"label label-info\">已申请</span>';
                } else if (cellvalue == 2) {
                    statusHtml = '<span class=\"label label-success\">提现成功</span>';
                } else if (cellvalue == 3) {
                    statusHtml = '<span class=\"label label-danger\">已驳回</span>';
                }
                $('#td_status').html(statusHtml);
                if (data.F_TurndownRemark != null) {
                    $('#tr_turndownRemark').show();
                } else {
                    $('#tr_checkRemark').show();
                }
                $("#form1").formSerialize(data);
                $("#form1").find('.form-control,select,input').attr('readonly', 'readonly');
            }
        });
    });

    function initControl() {
        //initBalance();
    }

    
</script>

<form id="form1">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <ul class="nav nav-tabs">
            <li role="presentation" class="active"><a href="#">提现详情</a></li>
        </ul>
        <div style="padding-top: 20px; margin-right: 30px;">
            <table class="form">
                <tr>
                    <th class="formTitle">提现金额：</th>
                    <td class="formValue">
                        <input id="F_WithdrawAmount" name="F_WithdrawAmount" type="number" class="form-control" style="display: inline-block; width: 180px;" /> <span style="display: inline-block;margin-left: 4px;font-weight: bold;"> 元</span>
                    </td>
                    <th></th>
                    <td></td>
                </tr>
                <tr>
                    <th class="formTitle" valign="top" style="padding-top: 5px;">
                        备注：
                    </th>
                    <td class="formValue" colspan="3">
                        <textarea id="F_WithdrawRemark" name="F_WithdrawRemark" class="form-control" style="height: 80px;"></textarea>
                    </td>

                </tr>
                <tr style="margin-left: 8px;margin-top: 8px; margin-bottom: 8px;">
                    <th class="formTitle" valign="middle" style="padding-top: 5px;">
                        状态：
                    </th>
                    <td id="td_status"></td>
                </tr>
                <tr>
                    <th class="formTitle">审核人：</th>
                    <td class="formValue">
                        <input id="F_CheckPersonName" name="F_CheckPersonName" type="text" class="form-control" style="display: inline-block; width: 200px;" />
                    </td>
                    <th class="formTitle">审核时间：</th>
                    <td class="formValue">
                        <input id="F_CheckTime" name="F_CheckTime" type="text" class="form-control" style="display: inline-block; width: 200px;" />
                    </td>
                </tr>
                <tr id="tr_checkRemark" style="display: none;">
                    <th class="formTitle" valign="top" style="padding-top: 5px;">
                        备注：
                    </th>
                    <td class="formValue" colspan="3">
                        <textarea id="F_CheckRemark" name="F_CheckRemark" class="form-control" style="height: 80px;"></textarea>
                    </td>
                </tr>
                <tr id="tr_turndownRemark" style="display: none;">
                    <th class="formTitle" valign="top" style="padding-top: 5px;">
                        驳回原因：
                    </th>
                    <td class="formValue" colspan="3">
                        <textarea id="F_TurndownRemark" name="F_TurndownRemark" class="form-control" style="height: 80px;"></textarea>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>
