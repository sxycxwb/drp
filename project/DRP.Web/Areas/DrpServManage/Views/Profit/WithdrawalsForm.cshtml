@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    $(function () {
        initControl();
        if (!!keyValue) {
            $.ajax({
                url: "/DrpServManage/Profit/GetWithdrawalsFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#form1").formSerialize(data);
                    initControl();
                }
            });
        }
    });
    function initBalance() {
        $.ajax({
            url: "/DrpServManage/Profit/GetCurrentBalance",    //后台webservice里的方法名称
            type: "get",
            data: {},
            dataType: "json",
            contentType: "application/json",
            success: function (data) {
                $('#accountBalance').text(data.balance.toFixed(2));
            }
        });
    }

    function initControl() {
        initBalance();
    }

    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }


        var withdrawAmount = $('#F_WithdrawAmount').val();
        var accountBalance = $('#accountBalance').text();
        if (parseFloat(withdrawAmount) > parseFloat(accountBalance)) {
            $.modalAlert("提现金额不能大于账户余额！", "warning");
            return;
        }

        $.confirmForm({
            url: "/DrpServManage/Profit/WithdrawSubmitForm",
            param: $("#form1").formSerialize(),
            loading: "正在提交中...",
            prompt: "确认要申请提现【" + withdrawAmount + "】元吗？",
            success: function () {
                $.currentWindow().initBalance();
                $.currentWindow().$("#gridList").resetSelection();
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        });
    }
</script>
<form id="form1">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <ul class="nav nav-tabs">
            <li role="presentation" class="active"><a href="#">提现信息</a></li>
        </ul>
        <div style="padding-top: 20px; margin-right: 30px;">
            <table class="form">
                <tr>
                    <th class="formTitle"><span class="required-span">*</span>提现金额：</th>
                    <td class="formValue">
                        <input id="F_WithdrawAmount" name="F_WithdrawAmount" type="number" class="form-control required" style="display: inline-block; width: 200px;" placeholder="请输入金额" /> <span style="display: inline-block;margin-left: 4px;font-weight: bold;"> 元</span>
                    </td>
                    <th class="formTitle">账户余额：</th>
                    <td class="formValue">
                        <span id="accountBalance" style="color: red; font-weight: bold;"></span> 元
                    </td>
                </tr>
                <tr>
                    <th class="formTitle" valign="top" style="padding-top: 5px;">
                        备注：
                    </th>
                    <td class="formValue" colspan="3">
                        <textarea id="F_WithdrawRemark" name="F_WithdrawRemark" class="form-control" style="height: 100px;"></textarea>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>
