@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    $(function () {
        initControl();
        if (!!keyValue) {
            $.ajax({
                url: "/DrpServManage/Product/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#form1").formSerialize(data);
                    initControl();
                }
            });
        }
        initEvent();
    });
    function initControl() {
        if($("#F_ChargePattern").val()=="0")
            $('#F_ChargeAmount').attr('disabled', false);
    }

    function initEvent() {
        
    }

    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }
        var F_BankAccountName = $('#F_BankAccountName').val();
        var F_RechargeAccount = $('#F_RechargeAccount').val();
        $.confirmForm({
            url: "/DrpServManage/Recharge/SubmitForm",
            param: $("#form1").formSerialize(),
            loading:"正在提交中...",
            prompt:"确认要为【"+F_BankAccountName+"】账户</br>充值【"+F_RechargeAccount+"】元吗？",
            success: function () {
                $.currentWindow().$("#gridList").resetSelection();
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        });
    }
</script>
<form id="form1">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <ul class="nav nav-tabs">
            <li role="presentation" class="active"><a href="#">提现信息</a></li>
        </ul>
        <div style="padding-top: 20px; margin-right: 30px;">
            <table class="form">
                <tr>
                    <th class="formTitle"><span class="required-span">*</span>提现金额</th>
                    <td class="formValue">
                        <input id="F_RechargeAccount" name="F_RechargeAccount" type="number" class="form-control required" style="display: inline-block; width: 200px;" placeholder="请输入金额" /> <span style="display: inline-block;margin-left: 4px;font-weight: bold;"> 元</span>
                    </td>
                    <th class="formTitle"></th>
                    <td class="formValue">
                    </td>
                </tr>
                <tr>
                    <th class="formTitle" valign="top" style="padding-top: 5px;">备注
                    </th>
                    <td class="formValue" colspan="3">
                        <textarea id="F_Description" name="F_Descriptions" class="form-control" style="height: 100px;"></textarea>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>
