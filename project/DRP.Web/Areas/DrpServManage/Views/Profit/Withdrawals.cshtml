@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    $(function () {
        initBalance();
        gridList();
    });

    function initBalance() {
        $.ajax({
            url: "/DrpServManage/Profit/GetCurrentBalance",    //后台webservice里的方法名称
            type: "get",
            data: {},
            dataType: "json",
            contentType: "application/json",
            success: function (data) {
                $('#accountBalance').text(data.balance.toFixed(2));
            }
        });
    }

    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/DrpServManage/Profit/GetGridWithdrawalsJson",
            height: $(window).height() - 128,
            colModel: [
                { label: '主键', name: 'F_Id', hidden: true },
                {
                    label: '提现金额(元)', name: 'F_WithdrawAmount', width: 150, align: 'left',
                    formatter: function (cellvalue) {
                        return cellvalue.toFixed(2);
                    }
                },
                {
                    label: '申请时间', name: 'F_CreatorTime', width: 150, align: 'left',
                    formatter: "date", formatoptions: { srcformat: 'Y-m-d H:d:s', newformat: 'Y-m-d H:d:s' }
                }, {
                    label: "状态", name: "F_Status", width: 100, align: "center",
                    formatter: function (cellvalue, options, rowObject) {
                        if (cellvalue == 1) {
                            return '<span class=\"label label-info\">已提交</span>';
                        } else if (cellvalue == 2) {
                            return '<span class=\"label label-success\">成功</span>';
                        } else if (cellvalue == 3) {
                            return '<span class=\"label label-danger\">驳回</span>';
                        } else return '';
                    }
                },
                { label: '备注', name: 'F_WithdrawRemark', width: 200, align: 'left' }
            ],
            pager: "#gridPager",
            sortname: 'F_CreatorTime desc',
            viewrecords: true
        });
        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: { keyword: $("#txt_keyword").val() }
            }).trigger('reloadGrid');
        });
    }
    function btn_add() {
        $.modalOpen({
            id: "Form",
            title: "申请提现",
            url: "/DrpServManage/Profit/WithdrawalsForm",
            width: "700px",
            height: "510px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }

    function btn_details() {
        var keyValue = $("#gridList").jqGridRowValue().F_Id;
        $.modalOpen({
            id: "Details",
            title: "查看提现详情",
            url: "/DrpServManage/Profit/WithdrawalsDetails?keyValue=" + keyValue,
            width: "700px",
            height: "550px",
            btn: null
        });
    }

</script>
<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
            <a id="DRP-add" authorize="yes" class="btn btn-primary dropdown-text" onclick="btn_add()"><i class="fa fa-plus"></i>申请提现</a>
        </div>
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已选中<span>1</span>项</li>
                <li><a id="DRP-detail" authorize="yes" onclick="btn_details()"><i class="fa fa-pencil-square-o"></i>查看详情</a></li>
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
        <script>$('.toolbar').authorizeButton()</script>
    </div>
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        账户余额：<span id="accountBalance" style="color: red; font-weight: bold;">0</span> 元
                        @*<input id="txt_keyword" type="text" class="form-control" placeholder="银行账户名" style="width:200px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn btn-primary"><i class="fa fa-search"></i></button>
                        </span>*@
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
    <div id="gridPager"></div>
</div>
