@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    $(function () {
        gridList();
    });
    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/DrpServManage/Product/GetGridJson",
            height: $(window).height() - 128,
            colModel: [
                { label: '主键', name: 'F_Id', hidden: true },
                { label: '产品名称', name: 'F_ProductName', width: 200, align: 'left' },
                {
                    label: '计费模式', name: 'F_ChargePattern', width: 100, align: 'left',
                    formatter: function (cellvalue) {
                        if (cellvalue == "0") {
                            return "产品";
                        } else if (cellvalue == "1") {
                            return "模块";
                        }
                    }
                },
                {
                    label: '计费金额(元)', name: 'F_ChargeAmount', width: 100, align: 'left',
                    formatter: function (cellvalue) {
                        return cellvalue.toFixed(2);
                    }
                },

                { label: '计费方式', name: 'F_ChargeStyle', width: 100, align: 'left' },
                { label: '产品描述', name: 'F_Description', width: 250, align: 'left' },
                {
                    label: '创建时间', name: 'F_CreatorTime', width: 80, align: 'left',
                    formatter: "date", formatoptions: { srcformat: 'Y-m-d H:d:s', newformat: 'Y-m-d H:d:s' }
                }
            ],
            pager: "#gridPager",
            sortname: 'F_CreatorTime desc',
            viewrecords: true
        });
        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: { keyword: $("#txt_keyword").val() },
            }).trigger('reloadGrid');
        });
    }
    function btn_add() {
        $.modalOpen({
            id: "Form",
            title: "添加产品",
            url: "/DrpServManage/Product/Form",
            width: "700px",
            height: "510px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_edit_module() {
        var chargePattern = $("#gridList").jqGridRowValue().F_ChargePattern;
        if (chargePattern == "产品") {
            $.modalAlert('计费模式为产品时无法维护产品模块', 'warning');
            return;
        }
        var productId = $("#gridList").jqGridRowValue().F_Id;
        $.modalOpen({
            id: "productmodule",
            title: "产品模块",
            url: "/DrpServManage/ProductModule/Index?productId=" + productId,
            width: "900px",
            height: "600px",
            btn: null,
            cancel: function () {
                $("#gridList").resetSelection();
                $("#gridList").trigger("reloadGrid");
                return true;
            }
        });
    }
    function btn_edit() {
        var keyValue = $("#gridList").jqGridRowValue().F_Id;
        $.modalOpen({
            id: "Form",
            title: "修改产品",
            url: "/DrpServManage/Product/Form?keyValue=" + keyValue,
            width: "700px",
            height: "510px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_delete() {
        $.deleteForm({
            url: "/DrpServManage/Product/DeleteForm",
            param: { keyValue: $("#gridList").jqGridRowValue().F_Id },
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        });
    }
    function btn_details() {
        var keyValue = $("#gridList").jqGridRowValue().F_Id;
        $.modalOpen({
            id: "Details",
            title: "查看产品",
            url: "/DrpServManage/Product/Details?keyValue=" + keyValue,
            width: "700px",
            height: "550px",
            btn: null
        });
    }

</script>
<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
            <a id="DRP-add" authorize="yes" class="btn btn-primary dropdown-text" onclick="btn_add()"><i class="fa fa-plus"></i>添加产品</a>
        </div>
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已选中<span>1</span>项</li>
                <li><a id="DRP-edit" authorize="yes" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>修改产品</a></li>
                <li><a id="DRP-delete" authorize="yes" onclick="btn_delete()"><i class="fa fa-trash-o"></i>删除产品</a></li>
                <li><a id="DRP-details" authorize="yes" onclick="btn_details()"><i class="fa fa-search-plus"></i>查看产品</a></li>
                <li class="split"></li>
                <li><a id="DRP-edit-module" authorize="yes" onclick="btn_edit_module()"><i class="fa fa-pencil-square-o"></i>产品模块维护</a></li>
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
        <script>$('.toolbar').authorizeButton()</script>
    </div>
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="产品名称" style="width:200px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn btn-primary"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
    <div id="gridPager"></div>
</div>
