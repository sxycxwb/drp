@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    var productId = $.request("productId");
    $(function () {
        initControl();
        if (!!keyValue) {
            $.ajax({
                url: "/DrpServManage/ProductModule/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#form1").formSerialize(data);
                }
            });
        }

        $('.layui-layer-setwin').click(function() {
            alert('1234567');
        });
    });
    function initControl() {
        //$("#F_Location").select2({ minimumResultsForSearch: -1 });
        //$("#F_ParentId").bindSelect({
        //    url: "/DrpServManage/ProductModule/GetTreeSelectJson",
        //    param: { moduleId: moduleId }
        //});
    }
    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }
        var postData = $("#form1").formSerialize();
        postData["F_ProductId"] = productId;
        $.submitForm({
            url: "/DrpServManage/ProductModule/SubmitForm?keyValue=" + keyValue,
            param: postData,
            success: function() {
                top.productmodule.$("#gridList").resetSelection();
                top.productmodule.$("#gridList").trigger("reloadGrid");
            }
        });
    }
</script>
<form id="form1">
    <div style="padding-top: 30px; margin-right: 30px;">
        <table class="form">
            <tr>
                <th class="formTitle"><span class="required-span">*</span>模块名称</th>
                <td class="formValue" colspan="3">
                    <input id="F_ModuleName" name="F_FullName" type="text" class="form-control required" placeholder="请输入名称"/>
                </td>
            </tr>
            <tr>
                <th class="formTitle"><span class="required-span">*</span>成本价</th>
                <td class="formValue">
                    <input id="F_CostPrice" name="F_CostPrice" type="number" class="form-control required" placeholder="请输入成本价" />
                </td>
                <th class="formTitle"><span class="required-span">*</span>销售价</th>
                <td class="formValue">
                    <input id="F_ChargeAmount" name="F_ChargeAmount" type="number" class="form-control required" placeholder="请输入销售价"/>
                </td>
            </tr>
            <tr>
                <th class="formTitle" valign="top" style="padding-top: 5px;">模块描述</th>
                <td class="formValue" colspan="3">
                    <textarea id="F_Description" name="F_Description" class="form-control" style="height: 100px;"></textarea>
                </td>
            </tr>
        </table>
    </div>
</form>
